<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    xmlns:views="clr-namespace:MauiApp1.Views"
    Title="Student Wallet">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginView}"
        Route="LoginView" />

    <!-- HOME -->
    <ShellContent
        Route="HomeView"
        ContentTemplate="{DataTemplate views:HomeView}" />

    <!-- WALLET -->
    <ShellContent
        Route="TopUpView"
        ContentTemplate="{DataTemplate views:TopUpView}" />

    <ShellContent
        Route="TransactionsView"
        ContentTemplate="{DataTemplate views:TransactionsView}" />

    <!-- PAYMENTS -->
    <ShellContent
        Route="CanteenView"
        ContentTemplate="{DataTemplate views:CanteenView}" />

    <ShellContent
        Route="DormPaymentView"
        ContentTemplate="{DataTemplate views:DormPaymentView}" />

    <!-- OTHER FEATURES -->
    <ShellContent
        Route="PartyView"
        ContentTemplate="{DataTemplate views:PartyView}" />
</Shell>
