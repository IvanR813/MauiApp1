<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.ActivateCardView"
             Title="Activate Card">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40"
            Spacing="20">
            
            <Label
                Text="Activate Card"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />
            
            <Label
                Text="Click the button below to activate your card"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />
            
            <Button
                Text="Activate Card"
                Clicked="OnActivateCardClicked"
                HorizontalOptions="Fill"
                Margin="0,20,0,0" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
