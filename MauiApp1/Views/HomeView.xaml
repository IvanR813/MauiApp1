<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.HomeView"
             x:DataType="viewmodels:HomeViewModel"
             Title="Home">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,20"
            Spacing="20">
            
            <Label
                Text="Student Wallet"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />
            
            <Label
                Text="Student Information"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,10,0,5" />
            
            <Label
                Text="{Binding StudentName}"
                FontSize="16"
                Margin="0,0,0,5" />
            
            <Label
                Text="{Binding Faculty}"
                FontSize="14"
                Margin="0,0,0,15" />
            
            <Label
                Text="Balance"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,10,0,5" />
            
            <Label
                Text="{Binding Balance, StringFormat='{0:F2} RSD'}"
                FontSize="24"
                FontAttributes="Bold"
                TextColor="Green"
                Margin="0,0,0,20" />
            
            <Label
                Text="Actions"
                FontSize="18"
                FontAttributes="Bold"
                Margin="0,10,0,10" />
            
            <Button
                Text="Top Up Wallet"
                Command="{Binding GoToTopUpCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Canteen Payment"
                Command="{Binding GoToCanteenCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Dorm Payment"
                Command="{Binding GoToDormCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Activate Card"
                Command="{Binding GoToActivateCardCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Import Card"
                Command="{Binding GoToImportCardCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Laundry"
                Command="{Binding GoToLaundryCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Party Scheduling"
                Command="{Binding GoToPartyCommand}"
                HorizontalOptions="Fill"
                Margin="0,0,0,10" />
            
            <Button
                Text="Transaction History"
                Command="{Binding GoToTransactionsCommand}"
                HorizontalOptions="Fill" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
