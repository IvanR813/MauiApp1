<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.LaundryView"
             Title="Schedule Laundry">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40"
            Spacing="20">
            
            <Label
                Text="Schedule Laundry"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />
            
            <Label
                Text="Select a time slot for laundry"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,0,0,20" />
            
            <Label
                Text="Time Slot:"
                FontSize="14"
                Margin="0,10,0,5" />
            
            <Picker
                x:Name="TimeSlotPicker"
                Title="Select time slot"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Schedule"
                Clicked="OnScheduleClicked"
                HorizontalOptions="Fill"
                Margin="0,30,0,0" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
