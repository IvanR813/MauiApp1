<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiApp1.ViewModels"
             x:Class="MauiApp1.Views.PartyView"
             x:DataType="viewmodels:PartyViewModel"
             Title="Schedule Party">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40"
            Spacing="20">
            
            <Label
                Text="Schedule Party"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />
            
            <Label
                Text="Notify porter about your party"
                FontSize="16"
                HorizontalOptions="Center"
                Margin="0,0,0,30" />
            
            <Label
                Text="Room Number:"
                FontSize="14"
                Margin="0,10,0,5" />
            
            <Entry
                Text="{Binding RoomNumber}"
                Placeholder="Enter room number"
                Keyboard="Numeric"
                HorizontalOptions="Fill" />
            
            <Label
                Text="Date:"
                FontSize="14"
                Margin="0,15,0,5" />
            
            <DatePicker
                Date="{Binding PartyDate}"
                HorizontalOptions="Fill" />
            
            <Label
                Text="Time:"
                FontSize="14"
                Margin="0,15,0,5" />
            
            <TimePicker
                Time="{Binding PartyTime}"
                HorizontalOptions="Fill" />
            
            <Button
                Text="Schedule Party"
                Command="{Binding SchedulePartyCommand}"
                IsEnabled="{Binding SchedulePartyCommand.CanExecute}"
                HorizontalOptions="Fill"
                Margin="0,30,0,0" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
